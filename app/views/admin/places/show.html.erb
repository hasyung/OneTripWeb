<%= render "base" %>
<fieldset id="map">
	<legend><%= t("helpers.links.map") %></legend>
	<div class="control-group">
		<%= image_tag @place.map.url(:thumb) %>
	</div>
</fieldset>
<fieldset id="video">
<legend><%= t("helpers.links.video") %></legend>
  <div class="control-group">
    <% if !@videos.blank? -%>
      <%= render :partial => "admin/videos/videos", :object => @videos %>
    <% end -%>
  </div>
</fieldset>
<fieldset id="audio">
	<legend><%= t("helpers.links.audio") %></legend>
  <div class="control-group">
    <% if !@narrates.blank? %>
      <%= render :partial => "admin/audios/audio", :object => @narrates %>
    <% end -%>
  </div>
</fieldset>
<fieldset id="article">
	<legend><%= t("helpers.links.article") %></legend>
  <% if !@article_travels.blank? %>
    <div class="control-group">
      <h4><%= t("activerecord.enums.article.categories.travels") %></h4>
      <% @article_travels.each do |article| -%>
        <%= render :partial => "admin/articles/article", :object => article %>
      <% end -%>
    </div>
  <% end -%>
  <% if !@article_recommends.blank? %>
    <div class="control-group">
      <h4><%= t("activerecord.enums.article.categories.recommend") %></h4>
      <% @article_recommends.each do |article| -%>
        <%= render :partial => "admin/articles/article", :object => article %>
      <% end -%>
    </div>
  <% end -%>
</fieldset>
<fieldset id="info">
	<legend><%= t("helpers.links.info") %></legend>
    <ul class="control-group unstyled">
      <% if @infos.blank? -%>
      <% else -%>
        <% @infos.each do |info| %>
          <%= render :partial => "admin/infos/info", :object => info %>
        <% end -%>
      <% end -%>
    </ul>
</fieldset>
<div id="ajax-form" class="modal hide fade in">
	<div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3></h3>
  </div>
  <div class="modal-body"></div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary" data-remote="true">
    	<i class="icon-save icon-large"></i>
    	<b><%= t("helpers.links.save") %></b>
    </button>
    <a href="#" class="btn" data-dismiss="modal"><%= t("helpers.links.cancel") %></a>
  </div>
</div>