<% if @place.errors.any? -%>
	$("#ajax-form .modal-body")
		.find("#errorExplanation").remove()
		.end()
		.prepend("<%= j(error_messages_for(@place, :class => 'control-group alert alert-error fade in', :close => :true)) %>");
<% else -%>
	$("#ajax-form")
		.find(":input:not(input[type=submit])").val("")
		.end()
	.modal('hide');

	if ($("#places .thumbnails li").size() > <%= Setting.admin_PlacePageSize %>) {
		$("#places .thumbnails li").last().remove();
	}
	
	$("#places .thumbnails")
		.prepend("<%= j(render :partial => @place) %>");

	$(".alert").remove();
	$("#toolbar").after("<%= j(alert_html(t('helpers.messages.new', :model_name => Place.model_name.human))) %>");
<% end -%>