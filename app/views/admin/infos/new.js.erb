<%- model_class = Info -%>

$("#ajax-form.modal")
	.find(".modal-body")
		.empty()
		.append('<%= j(render("form")) %>')
	.end()
	.find(".modal-header h3")
		.empty()
		.append("<%= t("helpers.links.add_info") %>")
	.end()
	.find(".modal-footer button[type=submit]")
		.show()
	.end()
.modal("show");