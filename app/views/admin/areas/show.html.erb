<%= render "base" %>
<fieldset>
  <legend><%= t("helpers.links.#{ @area.area_category.name }") %></legend>
  <% case @area.area_category.style_type_cd %>
  <% when 0 %>
    <%= render :partial => "admin/area_categories/style_type/style_0", :locals => { :area => @area } %>
  <% when 1 %>
    <%= render :partial => "admin/area_categories/style_type/style_1", :locals => { :area => @area } %>
  <% when 2 %>
    <%= render :partial => "admin/area_categories/style_type/style_2", :locals => { :area => @area } %>
  <% when 3 %>
    <%= render :partial => "admin/area_categories/style_type/style_3", :locals => { :area => @area } %>
  <% end %>
</fieldset>