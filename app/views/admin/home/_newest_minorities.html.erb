<%- model_class = Minority -%>
<div id="places" class="hero-unit newest-places alert-warning">
	<h6>最新添加的民族</h6>
	<%= simple_form_for :minority do |f| -%>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="name"><%= model_class.human_attribute_name(:name) %></th>
        <th class="key"><%= model_class.human_attribute_name(:key) %></th>
        <th class="middle"><%= model_class.human_attribute_name(:areas_count) %></th>
        <th class="middle"><%= model_class.human_attribute_name(:order) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
      </tr>
    </thead>
    <tbody>
      <% @newest_minorities.each do |minority| %>
        <tr>
          <td class="name"><a  class= "title" href="<%= admin_minority_path(minority) %>"><%= minority.name %></a></td>
          <td class="key"><%= minority.key %></td>
          <td class="middle"><%= minority.areas_count %></td>
          <td class="middle"><%= minority.order %></td>
          <td><%= l minority.created_at.to_date, :format => :long %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end -%>
</div>