<li>
	<%= link_to article.title, admin_area_article_path(article.area_id, article) %>
	<span class="create_time"><%= l article.created_at.to_date, :format => :long %></span>
  <% if %w(areas).include?(controller_name) -%>
  	<span class="actions">
    <% if can? :update, Article %>
    		<%= link_to raw("<i class=\"icon-edit icon-large\"></i>"), 
          edit_admin_area_article_path(article.area_id, article), 
          :title => t("helpers.links.edit"),
          :rel => :tooltip %>
    <% end %>
    <% if can? :destroy, Article %>
      <%= link_to raw("<i class=\"icon-trash icon-large\"></i>"),
        admin_area_article_path(article.area_id, article),
        :method => :delete,
        :title => t("helpers.links.destroy"),
        :data => { :confirm => t("helpers.messages.confirm") },
        :rel => :tooltip %>
    <% end %>
  	</span>
  <% end %>
</li>