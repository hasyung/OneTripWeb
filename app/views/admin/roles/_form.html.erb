<%- model_class = Role -%>

<%= simple_form_for [:admin, @role], :html => { :class => "special-form" } do |f| %>
  <fieldset>
  	<% if %w(new create).include?(action_name) %>
	  	<legend><%= t("helpers.submit.create", :model => model_class.model_name.human) %></legend>
  	<% end -%>
  	<% if %w(edit update).include?(action_name) %>
	  	<legend><%= t("helpers.submit.update", :model => model_class.model_name.human) %></legend>
  	<% end -%>
		<%= error_messages_for @role, :class => "control-group alert alert-error fade in", :close => :true %>
	  <%= f.input :name, :input_html => { :class => "span-full" } %>
	  <%= f.input :description, :input_html => { :class => "span-full" } %>
	  <div class="control-group permission">
	  	<label class="control-label"><%= model_class.human_attribute_name(:permissions) %></label>
		  <%= render "permissions" %>
		  <%= hidden_field_tag "role[permission_ids][]", "" %>
		</div>
	  <div class="form-actions">
	    <button type="submit" class="btn btn-primary">
	    	<i class="icon-save icon-large"></i>
	    	<% if %w(new create).include?(action_name) %>
		    	<b><%= t("helpers.submit.create", :model => model_class.model_name.human) %></b>
	    	<% end -%>
	    	<% if %w(edit update).include?(action_name) %>
	    		<b><%= t("helpers.submit.update", :model => model_class.model_name.human) %></b>
	    	<% end -%>
	    </button>
	    <a href="<%= admin_roles_path %>" class="btn">
	    	<i class="icon-ban-circle icon-large"></i>
	    	<b><%= t("helpers.links.cancel") %></b>
	    </a>
	  </div>
  </fieldset>
<% end %>

