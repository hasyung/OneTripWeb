<%= content_for :title do -%>
  <%= @model.name %>
<% end -%>

<div class="big-logo small">
  <a href="<%= special_minorities_path %>">
    <%= image_tag "/assets/index/logo.jpg", :alt => Setting.app_name, :title => Setting.app_name %>
  </a>
</div>
<div class="title_minorities">
  <%= image_tag "/assets/index/minorities.png", :alt => Setting.app_name, :title => Setting.app_name %>
</div>
<div class="navigation">
  <%= image_tag "/assets/index/navigation.jpg", :alt => Setting.app_name, :title => Setting.app_name %>
</div>
<% if @model.image_title.present? %>
  <div class="title" style="background-image:url(<%= @model.image_title.url %>);"></div>
<% end %>
<% if @model.subtitle.present? %>
  <h3 class="tag clearfix">
    <% @model.subtitle.split(";").each do |part| %>
      <span class="tag">â—Ž</span>
      <span class="character"><%= part %></span>
    <% end %>
  </h3>
<% end %>

<% if !@areas.blank? %>
  <% @areas.order_asc.each_with_index do |area,count| -%>
    <% case area.area_category.style_type_cd %>
    <% when 1 %>
      <%= render :partial => "shared/area_types/style_1_info", :locals => { :model => @model, :area => area } %>
    <% when 7 %>
      <%= render :partial => "shared/area_types/style_7", :locals => { :model => @model, :area => area } %>
    <% when 6 %>
      <%= render :partial => "shared/area_types/style_6", :locals => { :model => @model, :area => area } %>
    <% end %>
  <% end %>
<% end %>